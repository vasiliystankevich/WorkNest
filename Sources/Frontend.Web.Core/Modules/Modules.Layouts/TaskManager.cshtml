@using System.Web.Mvc.Html
@using System.Web.Optimization
@using Translations
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>
            @RenderSection("pagetitle", false)
        </title>
        <link href="~/Themes/Themes.Core/startbootstrap-sb-admin-2/vendor/jquery/jquery-ui.min.css" rel="stylesheet">
        <link href="~/Themes/Themes.Core/startbootstrap-sb-admin-2/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <link href="~/Themes/Themes.Core/startbootstrap-sb-admin-2/vendor/metisMenu/metisMenu.min.css" rel="stylesheet">
        <link href="~/Themes/Themes.Core/startbootstrap-sb-admin-2/vendor/datatables-plugins/dataTables.bootstrap.css" rel="stylesheet">
        <link href="~/Themes/Themes.Core/startbootstrap-sb-admin-2/vendor/datatables-responsive/dataTables.responsive.css" rel="stylesheet">
        <link href="~/Themes/Themes.Core/startbootstrap-sb-admin-2/dist/css/sb-admin-2.css" rel="stylesheet">
        <link href="~/Themes/Themes.Core/startbootstrap-sb-admin-2/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
            <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
        @Styles.Render("~/Libraries/Common/css")
        @Styles.Render("~/Libraries/Components/Preloader/css")
        
        <script src="~/Themes/Themes.Core/startbootstrap-sb-admin-2/vendor/jquery/jquery.min.js"></script>
        <script src="~/Themes/Themes.Core/startbootstrap-sb-admin-2/vendor/jquery/jquery-ui.min.js"></script>
        @Scripts.Render("~/Libraries/Common/js")
        @Scripts.Render("~/Libraries/Components/WebApi/js")
        @Scripts.Render("~/Libraries/Components/WebApi/Common/js")
    </head>
    <body>
        <div id="preloader">        
            <div id="status">&nbsp;</div>
        </div>    
        <div class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    @Html.ActionLink(I18NEngine.GetString("modules.layouts.common", "navbar_brand_link"), "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="navbar-header navbar-right">
                        @Html.ActionLink(I18NEngine.GetString("modules.layouts.common", "exit_link"), "Logout", "Accounts", new { area = "" }, new { @class = "navbar-brand" })
                    </div>                    
                }
            </div>
        </div>

        @RenderPage("~/Sidebar.cshtml")
        
        @RenderBody()
        <script src="~/Themes/Themes.Core/startbootstrap-sb-admin-2/vendor/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/Themes/Themes.Core/startbootstrap-sb-admin-2/vendor/metisMenu/metisMenu.min.js"></script>

        <script src="~/Themes/Themes.Core/startbootstrap-sb-admin-2/vendor/datatables/js/jquery.dataTables.min.js"></script>
        <script src="~/Themes/Themes.Core/startbootstrap-sb-admin-2/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
        <script src="~/Themes/Themes.Core/startbootstrap-sb-admin-2/vendor/datatables-responsive/dataTables.responsive.js"></script>

        <script src="~/Themes/Themes.Core/startbootstrap-sb-admin-2/dist/js/sb-admin-2.js"></script>
        @RenderSection("bodyscripts", required: false)
        @Scripts.Render("~/Libraries/Components/Preloader/js")
    </body>
</html>